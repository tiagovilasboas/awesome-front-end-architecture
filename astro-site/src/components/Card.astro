---
export interface Props {
  title: string;
  description?: string;
  href?: string;
}
const { title, description, href = '#' } = Astro.props as Props;
---
<a href={href} class="block p-4 border border-gray-200 dark:border-gray-700 rounded-lg hover:shadow transition-shadow h-full">
  <h3 class="text-base font-semibold text-orange-600 mb-1">{title}</h3>
  {description && <p class="text-sm text-gray-600 dark:text-gray-400 leading-snug">{description}</p>}
</a>